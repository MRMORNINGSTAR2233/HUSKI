# LLM Provider Configuration (choose one: openai, gemini, or groq)
LLM_PROVIDER=openai

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_EMBEDDING_MODEL=text-embedding-3-large

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=graphrag_documents

# PostgreSQL Configuration (for SQL queries)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=graphrag_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Application Settings
LOG_LEVEL=INFO
MAX_CONTEXT_LENGTH=8000
RETRIEVAL_TOP_K=5
GRAPH_MAX_HOPS=3
QUERY_TIMEOUT=30

# Feature Flags
ENABLE_SQL_QUERIES=true
ENABLE_GRAPH_QUERIES=true
ENABLE_VECTOR_SEARCH=true
ENABLE_QUERY_CACHING=true
